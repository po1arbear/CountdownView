<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.orangeaterz.countdownview.CountdownView
            android:id="@+id/countdownView"
            android:layout_width="86dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            tools:text="Hello World!"
            android:gravity="center"
            app:enableBackground="@drawable/bg_countdown"
            app:disableBackground="@drawable/bg_countdown"
            app:enabledTextColor="@android:color/white"
            app:disabledTextColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>